<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context=".CustomerFotoFragment">

    <ImageView
        android:id="@+id/fotoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/goCameraCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/goCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_photo_camera"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/goCameraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:text="Belum ada foto, sentuh untuk ambil foto"/>

        <LinearLayout
            android:id="@+id/bioContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:textColorHint="#686868"
                android:typeface="monospace"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Nama Kustomer"/>

            <EditText
                android:id="@+id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:textColorHint="#686868"
                android:textColor="#000"
                android:typeface="monospace"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="10dp"
                android:hint="No. Telp"/>

            <CheckBox
                android:id="@+id/confCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColorHint="#686868"
                android:textColor="#000"
                android:background="@drawable/edit_text_bg"
                android:text="Oke ?"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>